{% for post in posts %}
    <div class="post-thumbnail">
        <div class="post-artist-name">
            <h1>{{ post.artist.name }}</h1>
        </div>
        <div class="post-image">
            <img src="{{ asset('img/uploads/artists-posts/'~post.images|first.path) }}" alt="">
        </div>
    </div>
{% endfor %}