{% extends 'base.html.twig' %}

    {% block stylesheets %}
        <!-- CSS -->
        <link href="/css/fl.css" rel="stylesheet">
        <!-- FONT -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    {% endblock %}

    {% block javascripts %}
    <!-- JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/0709ae03e6.js" crossorigin="anonymous"></script>
    <script src="/js/hide_empty_post.js"></script>
    <script src="/js/search_bar.js"></script>
    <script src="/js/load_more_posts.js"></script>
    <script src="/js/display_avatar_on_select.js"></script>
    <script src="/js/load_category_posts.js"></script>
    {% endblock %}
    
    {% block body %}
        <!-- SUCCESS FLASH MESSAGE AFTER TRICK SUBMISSION -->
        {% for message in app.flashes('success') %}
            <div id="flash-notice" class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <!-- ERROR FLASH MESSAGE AFTER TRICK SUBMISSION -->
        {% for message in app.flashes('error') %}
            <div id="flash-notice" class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        <!-- END FLASH MESSAGES -->
        <div class="section">
            <div class="container">
                <!-- MAIN MENU -->
                <div>
                    <header>
                        <!-- LOGO -->
                        <div class="header-left">
                            <a href="{{path('homepage')}}" class="site-title">Furalys Library</a>
                        </div>
                        <!-- MENU -->
                        <div class="header-right">
                            <nav>
                                <a href="#" class="search-link">Search</a>
                                <a href="{{path('artist_show')}}">Artists</a>
                                <a href="{{path('category_show')}}">Categories</a>
                                <a href="#">Own Creations</a>
                                <div class="search hidden">
                                    <button class="close-search">
                                        <i class="fas fa-times"></i>
                                    </button>
                                    <input type="text" class="input-search" placeholder="Search...">
                                    <button class="search-btn">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </nav>
                        </div>
                    </header>
                </div>
                <!-- BODY 
                -> home.html.twig  -->
                {% block container %}{% endblock %}
                <!-- FOOTER -->
                <footer>
                    <div class="footer-links">
                        <div class="test">
                            <div>
                                <span class="copyright">Copyright &copy; Furalys 2021</span>
                            </div>
                            <div>
                                <a href="#">Privacy Policy</a>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>        
    {% endblock %}
